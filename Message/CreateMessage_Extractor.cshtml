
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateMessage_Extractor</title>
    <style>

        .error_Msg {
            color: #fa4b2a;
            padding-left: 10px;
        }

        body {
            font-family: Verdana;
        }
    </style>
</head>
<body>

    <div class="container ">

        <form action="~/Message/insert_CreateMessage_Extractor" class="horizontal-form" method="post" name="myForm">

            <div>
                <h3 class="form-section" style="text-align:center;"><u>Create and send Message(With Extractor)</u></h3>
            </div>
            <hr />

            <div class="row">

                <div class="col-4 text-left">

                    <label class="col-md-3 control-label"><i class="icon-call-in font-green-sharp"></i>&nbsp;<b>Receivers mobile numbers</b></label>


                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <textarea rows="3" name="ph_textarea" style="margin: 0px; width: 516px; height: 149px;"></textarea>

                </div>

            </div>
            <br />

            <div class="row">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <label>Message Text</label>
                <div class="col-4 text-left">

                    <label class="col-md-3 control-label"><i class="icon-bubble font-green-sharp"></i>&nbsp;<b>Add more TextMessages</b></label>
                    @*<div class="icon-call-in"> <b>Receivers mobile numbers</b></div>*@

                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <textarea rows="3" name="msg_textarea" style="margin: 0px; width: 516px; height: 149px;"></textarea>

                </div>

            </div>

            <br />


            <div class="row">
                <div class="col-lg-4">
                    <!-- The fileinput-button span is used to style the file input field as button -->
                    <span class="btn green fileinput-button">
                        <i class="fa fa-plus"></i>
                        <span> Add files... </span>
                        <input type="file" name="files[]" multiple="">
                    </span>
                    <button type="submit" class="btn blue start">
                        <i class="fa fa-upload"></i>
                        <span> Start upload </span>
                    </button>

                    <!-- The global file processing state -->
                    <span class="fileupload-process"> </span>


                </div>
                <!--File dropzone or select File-->
                <div class="coloumn">

                    <input type="file" name="file" />
                </div>
            </div>
            <br />


            <div class="row">
                <div class="col-4 text-left">
                    <b> Use Random Text</b>
                </div>

                <div class="text-right">
                    <div class="form-group">
                        <select>
                            <option value="No">No</option>
                            <option value="No">Yes</option>
                        </select>
                    </div>
                </div>
            </div>

            @if (ViewBag.success == 1)
            {
                <label for="success" style="color:rgb(3, 110, 21);">Inserted Successfully...</label>

            }
            <br />
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;             &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;           &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="submit" class="btn btn-circle green" value="send" style="text-align:center;" />


        </form>
    </div>

    @if (ViewBag.Exception != null)
    {
        <p style="color:red">Error:@ViewBag.Exception </p>
    }

</body>
</html>
